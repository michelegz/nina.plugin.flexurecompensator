<ResourceDictionary
    x:Class="Michelegz.NINA.FlexureCompensator.Options"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:rules="clr-namespace:NINA.Core.Utility.ValidationRules;assembly=NINA.Core"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  This data template will be displayed in N.I.N.A. on the options->plugin tab with the datacontext of the TestPlugin instance  -->
    <!--  In order for this datatemplate to be picked correctly, the key has to follow the naming convention of <IPlugin.Name>_Options -->
    <!--  Furthermore the Resource Dictionary has to be exported via code behind export attributes  -->
    <DataTemplate x:Key="Flexure Compensator_Options">
        <Grid DataContext="{Binding}" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="25" />
                <RowDefinition MinHeight="25" />
                <RowDefinition MinHeight="25" />
                <RowDefinition MinHeight="25" />
                <RowDefinition MinHeight="25" />
                <RowDefinition MinHeight="25" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Aggressiveness" />
            <TextBox
                            Grid.Column="1"
                            Grid.Row="0"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            TextAlignment="Left"
                            Text="{Binding Aggressivity}"/>
            <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="Minimum Drift" />
            <ninactrl:UnitTextBox
                            Grid.Column="1" Grid.Row="1"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            TextAlignment="Left"
                            Text="{Binding MinDriftLimit}"
                            Unit="pixels"/>
            <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="Maximum Drift" />
            <ninactrl:UnitTextBox
                            Grid.Column="1" Grid.Row="2"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            TextAlignment="Left"
                            Text="{Binding MaxDriftLimit}"
                            Unit="pixels"/>
            <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Text="Ignore filter changes"/>
            <CheckBox 
                Grid.Row="3"
                Grid.Column="1"
                MinWidth="80"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsChecked="{Binding IgnoreFilterChanges, Mode=TwoWay}" />
            <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Text="Ignore focuser position changes"/>
            <CheckBox 
                Grid.Row="4"
                Grid.Column="1"
                MinWidth="80"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsChecked="{Binding IgnoreFocusChanges, Mode=TwoWay}" />
            <!--
            <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Text="Downsample factor for plate solving" />
            <ninactrl:UnitTextBox
                            Grid.Column="1"
                             Grid.Row="3"
                            MinWidth="40"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            TextAlignment="Left"
                            Text="{Binding DownSampleFactor}"
                            Unit="" />
                        -->

        </Grid>
    </DataTemplate>
</ResourceDictionary>